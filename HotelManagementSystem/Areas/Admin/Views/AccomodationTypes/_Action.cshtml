@model HotelManagementSystem.Areas.Admin.ViewModel.AccomodationTypeActionViewModel
<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create Accomodation Type</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <form id="actionForm">
            <div class="form-group">
                <label>Enter Name</label>
                <input name="Name" class="form-control"  placeholder="Enter Accomodation Type Name">
            </div>
            <div class="form-group">
                <label >Enter Description</label>
                <textarea name="Description" class="form-control"  placeholder="Enter Accomodation Type Description">
            </textarea>    
            </div>
            
            
        </form>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button id="actionButton" type="button" class="btn btn-primary">Save changes</button>
    </div>
</div>

<script>
    $("#actionButton").click(function() {
            $.ajax({
                url: '@Url.Action("Action","AccomodationTypes")',
                type: "POST",
                data:$("#actionForm").serialize()
        })
            .done(function(response) {
                if (response.success) {
                    location.reload();
                } else {
                    alert("error");
                }
            });
    });
</script>
